<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Urgency</th>
			<th>Importance</th>
			<th>Quadrant</th>
			<th>Mean</th>
			<th>Options</th>
		</tr>
	</thead>

	<tbody>
	<% @tasks.each do |task| %>
		<tr>
			<td><%= task.name %></td>
			<td><%= task.urgency %></td>
			<td><%= task.importance %></td>
			<td><%= task.quadrant %></td>
			<td><%= task.mean %></td>
			<td>
				<%= link_to 'complete', tasks_complete_path(id: task.id), method: :post %>
				<%= link_to 'clear', tasks_remove_path(id: task.id), method: :delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
