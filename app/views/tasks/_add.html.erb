<%= form_for :task, url: tasks_add_path do |f| %>
	<%= f.text_field :name, placeholder: 'name' %>
	<%= f.text_field :urgency, placeholder: 'urgency' %>
	<input id='urgency-slider' />
	<%= f.text_field :importance, placeholder: 'importance' %>
	<input id='importance-slider' />
	<%= f.submit 'add task' %>
<% end %>
